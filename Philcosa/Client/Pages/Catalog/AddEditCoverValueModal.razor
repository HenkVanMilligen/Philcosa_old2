@using Philcosa.Application.Features.CoverValues.Commands.AddEdit
<EditForm Model="@AddEditCoverValueModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            @{
                if (AddEditCoverValueModel.Id == 0)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        Add Cover Value
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        Update Cover Value
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                @if (AddEditCoverValueModel.Id != 0)
                {
                    <MudItem xs="12" md="6">
                        <MudTextField Disabled For="@(() => AddEditCoverValueModel.Id)" @bind-Value="AddEditCoverValueModel.Id" Label="Id" />
                    </MudItem>
                }
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditCoverValueModel.Code)" @bind-Value="AddEditCoverValueModel.Code" Label="Code" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="decimal?" For="@(() => AddEditCoverValueModel.MinValue)" @bind-Value="AddEditCoverValueModel.MinValue" Label="MinValue" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="decimal?" For="@(() => AddEditCoverValueModel.MaxValue)" @bind-Value="AddEditCoverValueModel.MaxValue" Label="MaxValue" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
            @if (AddEditCoverValueModel.Id != 0)
            {
                <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!validated)" Color="Color.Secondary">Update</MudButton>
            }
            else
            {
                <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!validated)" Color="Color.Success">Save</MudButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>